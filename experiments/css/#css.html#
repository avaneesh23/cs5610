        }

        h1 {
            text-shadow: 0 3px 2px #7D7D7D;
        }

        h2 {
            background-color: #519912;
            color: #FFFFFF;
            font-size: 1.1em;
            padding: 0.5em;
            width: 100%;
            text-decoration: none;
        }

        .none {
            display: none;
        }

        a:link {
            color: green;
        }

        a:visited {
            color: green;
        }

        a:hover {
            color: green;
        }

        a:active {
            color: green;
        }


        /* CSS Code for animation and mouse hovering on divisions */
        .exp-wrap a:hover + .desc {
            display: block;
        }

        .exp-animation a:hover + .desc {
            display: block;
        }

        .exp-animation h2 {
            width: 31%;
        }

            .exp-animation h2:hover {
                background-color: #582858!important;
                width: 100%;
                transition: 2s;
            }
